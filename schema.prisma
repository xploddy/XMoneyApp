generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Transaction {
  id          String   @id @default(cuid())
  amount      Float
  date        DateTime @default(now())
  category    String
  description String?
  type        String   // 'INCOME' or 'EXPENSE'
  paid        Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
